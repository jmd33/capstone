<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Your Results"
                android:layout_marginLeft="20dp"

                android:textColor="#111111"
                android:textSize="30dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/audiogram_above_graph"
                android:layout_marginLeft="20dp"

                android:textColor="#111111"
                android:textSize="20dp" />
            
            <com.androidplot.xy.XYPlot
                android:id="@+id/mySimpleXYPlot"
                android:layout_width="fill_parent"
                android:layout_height="400dp"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_marginTop="30px"
                title="" />
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent">

                <TextView
                        android:layout_width="30dp"
                        android:layout_height="5dp"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:background="@color/dark_blue"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/left_ear"
                        android:textColor="#111111"
                        android:textSize="15sp" />

                <TextView
                        android:layout_width="30dp"
                        android:layout_height="5dp"
                        android:text=""
                        android:layout_marginTop="5dp"

                        android:layout_marginLeft="15dp"
                        android:background="@color/light_blue"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/right_ear"
                        android:textColor="#111111"
                        android:textSize="15sp" />

            </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="fill_parent" android:layout_gravity="left|center_vertical">


        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/audiogram_understanding_results_title"
                android:textColor="#111111"

                android:textSize="24sp" />

        <LinearLayout
                android:orientation="horizontal"

                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:layout_gravity="left|center_vertical">

            <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text=""
                    android:background="@color/audiogram_green"
                    />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/audiogram_green_explanation"
                android:textColor="#111111"
                android:textSize="20sp" />

            </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"

                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:layout_gravity="left|center_vertical">

            <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text=""
                    android:background="@color/audiogram_yellow"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/audiogram_yellow_explanation"
                    android:textColor="#111111"
                    android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="60dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:layout_gravity="left|center_vertical">

            <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text=""
                    android:background="@color/audiogram_red"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/audiogram_red_explanation"
                    android:textColor="#111111"
                    android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>