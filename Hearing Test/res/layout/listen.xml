<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!--
         <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listen to the world around you."
        android:textSize="30sp" />
    -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"

        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/tbtn_record"

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_power_blue"
            android:text="ToggleButton"
            android:textOff="Listen"
            android:textOn="Stop" />
    </LinearLayout>

    <ViewSwitcher
        android:id="@+id/vs_presets_eq"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"
        android:inAnimation="@android:anim/fade_in" >

        <LinearLayout
            android:id="@+id/view_presets"
            android:layout_width="fill_parent"
            android:layout_gravity="center"

            android:layout_marginTop="60dp"
            android:layout_height="200dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_presets"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/ll_presets2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/btn_preset_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"

                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_tv"
                        />


                    <ImageView
                        android:id="@+id/btn_preset_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/btn_preset_1"

                        android:src="@drawable/ic_conversation"
                            />
                    <ImageView
                        android:id="@+id/btn_preset_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/btn_preset_2"

                        android:src="@drawable/ic_group"
                        />



                    <!--Active Below Icons-->
                    <ImageView
                            android:id="@+id/iv_preset_active_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btn_preset_1"
                            android:layout_marginLeft="30dp"

                            android:src="@drawable/ic_below_acive"

                            android:layout_marginTop="-43dp"/>
                    <ImageView
                            android:id="@+id/iv_preset_active_2"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btn_preset_2"
                            android:layout_toRightOf="@id/btn_preset_1"

                            android:src="@drawable/ic_below_acive"

                            android:layout_marginTop="-43dp"/>


                    <ImageView
                            android:id="@+id/iv_preset_active_3"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btn_preset_3"
                            android:layout_toRightOf="@id/btn_preset_2"

                            android:src="@drawable/ic_below_acive"

                            android:layout_marginTop="-43dp"/>





                </RelativeLayout>
<!-- 
                <LinearLayout
                    android:id="@+id/ll_presets3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal" >
 -->
<!--                 </LinearLayout>
 -->            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_eq"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <include layout="@layout/equalizer" />
        </LinearLayout>
    </ViewSwitcher>

    <!--
    <LinearLayout
        android:id="@+id/ll_EQ"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
    </LinearLayout>
    -->

    <RelativeLayout
        android:id="@+id/ll_other"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_eq"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_eq" />
    </RelativeLayout>

</LinearLayout>